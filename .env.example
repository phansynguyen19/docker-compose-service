# Gen3 Fence + Arborist Environment Variables
# Copy this file to .env and customize as needed

# PostgreSQL Configuration
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=postgres
POSTGRES_HOST=gen3-postgres
POSTGRES_PORT=5432

# Fence Database
FENCE_DB_NAME=fence_db
FENCE_DB_USER=postgres
FENCE_DB_PASSWORD=postgres

# Arborist Database
ARBORIST_DB_NAME=arborist_db
ARBORIST_DB_USER=postgres
ARBORIST_DB_PASSWORD=postgres

# Service Ports
FENCE_PORT=5000
ARBORIST_PORT=8080
POSTGRES_PORT=5432
NGINX_HTTP_PORT=80
NGINX_HTTPS_PORT=443

# Debug Mode
GEN3_DEBUG=true

# Google OAuth (Optional - configure in fence-config.yaml)
# GOOGLE_CLIENT_ID=your-google-client-id
# GOOGLE_CLIENT_SECRET=your-google-client-secret

# OAuth Client Credentials (Auto-generated by setup.sh)
# These will be created in Secrets/ directory
# FE_CLIENT_ID=auto-generated
# FE_CLIENT_SECRET=auto-generated
